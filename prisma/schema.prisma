// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  idMember Int       @id @default(autoincrement())
  name     String
  birthday DateTime
  domicile String
  telp     String
}

model Room {
  idRoom       Int       @id @default(autoincrement())
  roomName     String
  roomType     String
  roomSize     Int
  capacity     Int
  availability String    // Could be an enum: enum Availability { AVAILABLE, BOOKED }
  price        Int
  description  String
  // Relationships
  Booking      Booking[]
}

model Booking {
  idBooking    Int       @id @default(autoincrement())
  idRoom       Int
  bookerName   String
  bookingMade  DateTime
  reservedTime DateTime

  // Relations
  Room         Room      @relation(fields: [idRoom], references: [idRoom])
}